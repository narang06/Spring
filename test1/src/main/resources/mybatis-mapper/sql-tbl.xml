<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.TblMapper">	
	<select id="tblList" parameterType="hashmap" resultType="com.example.test1.model.Tbl">
		SELECT 
		B.*, TO_CHAR(CDATETIME, 'YYYY-MM-DD') AS CDATE
		FROM TBL_BOARD B
		WHERE 1=1
		<if test="kind !='' and kind != null">
			AND KIND = #{kind}
		</if>
		
		<if test="sort == 1">
			ORDER BY BOARDNO
		</if>
		
		<if test="sort == 2">
			ORDER BY TITLE
		</if>
		
		<if test="sort == 3">
			ORDER BY CNT DESC
		</if>
	</select>
	
	<delete id="tblDelete" parameterType="hashmap">
		DELETE 
		FROM TBL_BOARD
		WHERE BOARDNO = #{boardNo}
	</delete>
	
	<insert id="tblAdd" parameterType="hashmap">
		INSERT INTO TBL_BOARD VALUES (B_SEQ.NEXTVAL, #{title}, #{content}, #{userId}, 0, 0, 3, SYSDATE, SYSDATE)
	</insert>
	
	<select id="tblInfo" parameterType="hashmap" resultType="com.example.test1.model.Tbl">
		SELECT * FROM TBL_BOARD WHERE BOARDNO = #{boardNo}
	</select>
</mapper>




